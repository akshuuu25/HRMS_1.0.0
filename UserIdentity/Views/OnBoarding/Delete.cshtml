@model HRMS.Models.OnBoardingCheckPoint

@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
     <link rel="stylesheet" href="~/css/StyleSheet.css"/>
</head>

<h3>Are you sure you want to delete this?</h3>
<div>
   
    
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CheckPointName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CheckPointName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BUnitId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BUnitId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeptID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeptID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AssigneeId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AssigneeId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
