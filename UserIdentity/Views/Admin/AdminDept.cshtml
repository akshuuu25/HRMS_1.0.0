@model HRMS.Models.Department
@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
    <head>
        <title>AdminDepartment</title>
       <link rel="stylesheet" href="~/css/StyleSheet.css" />
         
    </head>
    <body>
        
       

        <div class="row">
            <div class="col-sm-4"></div>


            <div class="col-sm-4">
                <form asp-controller="Admin" asp-action="AdminDept" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                      <div class="form-group">
                             
                          <label asp-for="DeptName" class="control-label">Department Name<span style="color:red;">*</span></label>
                         
                          <input asp-for="DeptName" class="form-control" id="deptname"/>
                          <span asp-validation-for="DeptName" class="text-danger"></span>

                        </div>
                         <div class="form-group">
                             
                           <label asp-for="Status" class="control-label">Select Status<span style="color:red;">*</span></label>
                           @Html.DropDownListFor(model => model.Status, new List<SelectListItem>()
                            {
                               new SelectListItem() { Text = "Active", Value = "True" },
                               new SelectListItem() { Text = "InActive", Value = "False"}
                           }, "Select Status", new { @id = "status", @class="form-control" })

                       
                        
                         <span asp-validation-for="Status" class="text-danger"></span><br />
                         <div class="from-group d-flex justify-content-center">
                                 <input type="submit" id=submit class="btn mr-2" value="Save"  />
                                 <a asp-action="DeptDashboard" asp-controller="DeptDash" class="btn" id="submit">Return To Dashboard</a>

                             </div>
                           

                      </div>
                      
                        
                             
                             <div class="col-sm-4">

                             </div>

                         
                </form>
            </div>

            <div class="col-sm-4"></div>

        </div>

    </body>
    </html>


